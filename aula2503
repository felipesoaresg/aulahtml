        let minhalista = ['Azul', 'Planta', 'Cinema','Amor', 'Paixão','Novela', 'Maça','Celular','Etec', 'Feliz', 'Computador']

        for (let index = 0; index < minhalista.length; index++) {
            document.write(minhalista[index] + "<br></br>");
            
        }
      
      // se for gerar de 1 à 100
        for (let index = 0; index < 101; index++) {
            document.write(index + '<br></br>');
            
        }

        // se for com numeros pares
        for (let index = 1; index < 101; index++) {
            if(inder% 2 === 0) {
            document.write(index + '<br></br>');
            }
        }
    </script>
